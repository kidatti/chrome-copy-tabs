{
  "manifest_version": 3,
  "name": "__MSG_name__",
  "description": "__MSG_description__",
  "version": "0.5.4",
  "default_locale": "en",
  "icons" : {
    "128": "images/icon128-7.png"
  },
  "action": {
    "default_icon": "images/icon128-7.png",
    "default_title": "__MSG_name__",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["all_tabs.html", "all_tabs.js", "content.js", "html_utils.js", "readability.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "options.html"
}
